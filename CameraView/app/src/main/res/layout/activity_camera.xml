<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/emotionBackground"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/ic_bg1">
        <ImageView
            android:id="@+id/emotionIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/normal2smile"
            android:layout_gravity="center"/>
    </FrameLayout>
    <org.opencv.android.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:id="@+id/frameSurface"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:id="@+id/flipCamera"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_flip_camera_ios_24"/>
        <ImageView
            android:padding="5dp"
            android:layout_marginStart="100dp"
            android:id="@+id/gallery"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_image_24"/>
    </LinearLayout>


</LinearLayout>