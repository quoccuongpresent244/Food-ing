<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/emotionBackground"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/ic_bg1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/emotionIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/normal2smile" />
    </FrameLayout>

    <org.opencv.android.JavaCameraView
        android:id="@+id/frameSurface"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/emotionBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/frameSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/flipCamera"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_flip_camera_ios_24" />

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_image_24" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>